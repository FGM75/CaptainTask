<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Footer -->
    <include
        layout="@layout/header_layout"
        android:id="@+id/header_layout" />

    <!-- Primer EditText -->
    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_layout"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:hint="Nombre del producto"
        android:background="@null"
        android:gravity="center_horizontal"
        android:contentDescription="Campo para ingresar el nombre del producto"/>


    <!-- Imagen -->
    <ImageView
        android:id="@+id/imagen"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_below="@id/editText1"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_add_photo_alternate_black_48"
        android:onClick="seleccionarImagen" />

    <!-- Segundo EditText -->
    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagen"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:background="@null"
        android:gravity="center_horizontal"
        android:hint="Descripcion del Producto"
        android:contentDescription="Campo para ingresar la descripci칩n del producto"/>

    <!-- Bot칩n -->
    <Button
        android:id="@+id/boton"
        style="@style/BotonRectangular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText2"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/a침adir"
        android:onClick="agregarProducto"
        android:contentDescription="Bot칩n para agregar el producto a la base de datos"/>


</RelativeLayout>
